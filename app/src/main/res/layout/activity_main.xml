<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    style="@style/AppTheme"
    android:background="#c8ffd7">

    <TextView
        style="@style/AppTheme"
        android:text="@string/my_nanodegree_apps"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="@dimen/my_nanodegree_text_size" />

    <Button
        android:layout_width="@dimen/my_nanodegree_buttons_width"
        android:layout_height="@dimen/my_nanodegree_buttons_height"
        android:text="@string/spotify_streamer"
        android:id="@+id/button0"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="#ffa52d" />

    <Button
        android:layout_width="@dimen/my_nanodegree_buttons_width"
        android:layout_height="@dimen/my_nanodegree_buttons_height"
        android:text="@string/scores_app"
        android:id="@+id/button1"
        android:background="#ffa52d"
        android:layout_below="@+id/button0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:layout_width="@dimen/my_nanodegree_buttons_width"
        android:layout_height="@dimen/my_nanodegree_buttons_height"
        android:text="@string/library_app"
        android:id="@+id/button2"
        android:background="#ffa52d"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <Button
        android:layout_width="@dimen/my_nanodegree_buttons_width"
        android:layout_height="@dimen/my_nanodegree_buttons_height"
        android:text="@string/Build_it_bigger"
        android:id="@+id/button3"
        android:background="#ffa52d"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="@dimen/my_nanodegree_buttons_width"
        android:layout_height="@dimen/my_nanodegree_buttons_height"
        android:text="@string/bacon_reader"
        android:id="@+id/button4"
        android:background="#ffa52d"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:layout_width="@dimen/my_nanodegree_buttons_width"
        android:layout_height="wrap_content"
        android:text="@string/capstone_myown_app"
        android:id="@+id/button5"
        android:background="#ff3255"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp" />

</RelativeLayout>
