<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="@dimen/detail_text_view_trailer_list_item_minSize"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/detail_text_view_trailer_image_view_layout_width"
        android:layout_height="@dimen/detail_text_view_trailer_image_view_layout_height"
        android:layout_gravity="center"
        android:src="@drawable/ic_play_arrow_black_24dp" />

    <TextView
        android:id="@+id/trailer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</LinearLayout>